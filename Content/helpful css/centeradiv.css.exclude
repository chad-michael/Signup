/* horizontally and vertically center a DIV - V1*/

.centered_div {
    width: 100px;
    height: 100px;
    position: absolute;
    top: 50%;
    left: 50%;
    margin-left: -50px;
    margin-top: -50px;
    background: red;
}

/* horizontally and vertically center a DIV with size 500 x 200 px */

.centered_div {
    width: 500px;
    height: 200px;
    position: absolute;
    top: 50%;
    left: 50%;
    margin-left: -250px;
    margin-top: -100px;
    background: red;
}

