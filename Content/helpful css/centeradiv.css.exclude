div {
    float: left;
    text-align: center;
    width: 150px;
    height: 150px;
    margin: 5px;
    border: 1px solid #ccc;
    font-size: 1em;
    line-height: 148px;
}

    div img {
        margin-top: expression(( 150 - this.height) / 2);
    }

    html > body div img {
        /*hidden from IE 5-6 */
        margin-top: 0;
        /* to clean up, just in case IE later supports valign! */
        vertical-align: middle;
    }

